@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="container container-authentication">
    <div class="row row-authentication">
        <div class="col-lg-5 col-md-7 col-sm-8 col-10 col-authentication">
            <section>
                <form method="post">
                    <h3>@ViewData["Title"]</h3>
                    <h4>Enter your email.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="bt bt--main bt--animated bt--authentication">Resend</button>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
