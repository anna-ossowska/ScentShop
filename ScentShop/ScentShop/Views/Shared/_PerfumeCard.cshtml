@model Perfume

<div>
    <h2><a asp-controller="Perfume" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></h2>
    <div>
        <img src="@Model.ImageThumbnailUrl" alt="" class="img-thumbnail" style="height: 40%; width: 40%">
    </div>
    <p>by @Model.Brand</p>
    <p>@Model.Capacity ml</p>
    <p>@Model.Price.ToString()$</p>
    <p>@Model.Category.CategoryName</p>

    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-perfumeId="@Model.Id" class="btn btn-light">Add To Cart</a>

</div>