@model PerfumesListViewModel

    <div id="list-container">
        <div class="list-filter">
            <div class="item">Categories</div>
            <div class="item">Filters</div>
            <div class="item">Popular tags</div>
        </div>

        <div class="list-search">
            <div class="list-search-box">
                <div class="item">Search</div>
            </div>

            <div class="list-cards">
                <div class="list-card">
                    <div class="list-card-bg">
                        <div class="list-card-picture"></div>
                    </div>
                    <div class="list-card-details">
                        <h3 class="name">Name</h3>
                        <p class="brand">Brand</p>
                        <p class="price">$100</p>
                    </div>
                </div>
                <div class="list-card">Item 2</div>
                <div class="list-card">Item 3</div>
                <div class="list-card">Item 4</div>
                <div class="list-card">Item 5</div>
                <div class="list-card">Item 6</div>
            </div>
        </div>
    </div>


    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    @await Component.InvokeAsync("CategoryMenu")

    <br />
    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input asp-for="SearchString" class="form-control">
                <button class="btn btn-info" type="submit" value="Filter">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>
    <br />

    @Html.ActionLink("Product Name", "List", new { sortOrder = ViewBag.NameSortParam })
    @Html.ActionLink("Price", "List", new { sortOrder = ViewBag.PriceSortParam })
    @Html.ActionLink("Brand", "List", new { sortOrder = ViewBag.BrandSortParam })
    @Html.ActionLink("Capacity (ml)", "List", new { sortOrder = ViewBag.CapacitySortParam })

    @foreach (var perfume in Model.Perfumes)
    {
        <partial name="_PerfumeCard" model="perfume" />
    }