@model ShoppingCartViewModel

<h2>Shopping Cart</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Amount</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
        <tr>
            <td>@item.Perfume.Name</td>
            <td>@item.Perfume.Brand</td>
            <td>@item.Perfume.Price</td>
            <td>@item.Amount</td>

            <td><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-perfumeId="@item.Perfume.Id"><i class="far fa-trash-alt"></i></a></td>
        
        </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td>@Model.Total.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<a asp-controller="Order" asp-action="Checkout" class="btn btn-info">Check out</a>

